<section>
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<h3>
				{% if post.data.remoteURL %}
					<a href="{{ post.data.remoteURL }}" target="_blank" rel="noopener noreferrer"> 
						{{ post.data.title }}
					</a>
				{% else %}
					<a href="{{ post.url | url }}">
						{% if post.data.title %}
							{{ post.data.title }}
						{% else %}
							Untitled
						{% endif %}
					</a>
			    {% endif %}
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
			<p>
				<time datetime="{{ post.date | machineDate }}">
					<small>
						{{ post.date | readableDate }} by {{ post.data.author }} 
					</small>					
				</time>
				{% if post.data.remoteURL %}
					<small>
						on <a href="{{ post.data.remoteURL }}" target="_blank" rel="noopener noreferrer"> {{ post.data.remoteBaseURL }}</a>
						<i class="fa-solid fa-arrow-up-right-from-square"></i>
					</small>
				{% endif %}				
			</p>
			{% if post.data.tags %}
				<p>
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>
